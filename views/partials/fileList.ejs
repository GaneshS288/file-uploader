<% if(files.length > 0) {%>
<section class="file-section">
    <h2 class="files-heading">Files</h2>
    <ul class="file-list">
        <% for(let i = 0; i < files.length; i ++) {%>
            <li data-name="<%= files[i].name %>"
                data-size="<%= files[i].size %>"
                data-created_At="<%= files[i].created_at %>"
                data-parent_Folder_Id="<%= files[i]["parent_folder_id"] %>"
                data-file_Id="<%= files[i].id %>"
                data-type="<%= files[i].type %>"
                class="file">
                <div class="file-name-and-icon">
                    <span class="icon <%= files[i].type.split("/")[0] %>-icon"></span>
                    <span><%= files[i].name %></span>
                </div>
                <span class="file-created-at"><%= files[i].created_at.toDateString() %></span>
                <div class="file-icon-buttons">
                    
                    <% if(!folderId) { %>
                        <a class="icon info-icon" aria-label="info" href="/myDrive/info/file?fileId=<%= files[i].id %>"></a>
                        <a class="icon share-icon" aria-label="share" href="/myDrive/share/file?fileId=<%= files[i].id %>"></a>
                        <a class="icon delete-icon" aria-label="delete" href="/myDrive/delete/file?fileId=<%= files[i].id %>"></a>
                    <% } %>
                    <% if(folderId) { %>
                        <a class="icon info-icon" aria-label="info" href="/myDrive/info/file?fileId=<%= files[i].id %>&folderId=<%= folderId%>"> </a>
                        <a class="icon share-icon" aria-label="share" href="/myDrive/share/file?fileId=<%= files[i].id %>&folderId=<%= folderId %>"></a>
                        <a class="icon delete-icon" aria-label="delete" href="/myDrive/delete/file?fileId=<%= files[i].id %>&folderId=<%= folderId %>"></a>    
                    <% } %>    
                </div>
            </li>
        <% } %>    
    </ul>
</section>
<% } %>
